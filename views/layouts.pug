block contents
  .jumbotron
    div
    span#high High
    span#flow Flow
    p.lead
      | Join the largest network of licensed Marijuna growers and distributors in Southern California
    hr.my-4
    p
      | Locations available in Orange, San Diego and LA Counties

  // Modals
  // * Button for Modal *
  //- p.lead
  //-   a.btn.btn-primary.btn-lg(href='#' role='button') Join

  button.btn.btn-primary(type='button' data-toggle='modal' data-target='#modal1') Join

  // * Modal1 for select dispenser or grower *
  // * Modal2 for sign-up form for grower *
  // * Modal3 for sign-up form for dispenser *
  #modal1.modal.fade(tabindex='-1' role='dialog' aria-labelledby='userType' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#userType.modal-title Sign-Up!
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form
            .form-group(action='/join', method='post')
              label(for='userTypeLabel') Please select user type:
              select#userTypeOptions.form-control
                option Select
                option Grower
                option Dispenser
              button.btn.btn-secondary(type='button' data-dismiss='modal') Close
              button#userTypeBttn.btn.btn-primary(type='submit') Continue

        .modal-footer
          

    #modal2.modal.fade(tabindex='-1' role='dialog' aria-labelledby='joinForGrower' aria-hidden='true')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h5#growerForm.modal-title Sign-Up!
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
            form
              #sign-up.form-group
                label.form-control-label(for='grower-name') Name:
                input#grower-name.form-control(type='text')
                label.form-control-label(for='grower-license') License ID:
                input#grower-license.form-control(type='text')
                label.form-control-label(for='grower-city') City:
                input#grower-city.form-control(type='text')
                label.form-control-label(for='grower-state') State:
                input#grower-state.form-control(type='text' placeholder='CA')
                label.form-control-label(for='grower-email') Email:
                input#grower-email.form-control(type='email' placeholder='highflow@example.com')
                label.form-control-label(for='grower-bio') Bio:
                input#grower-bio.form-control(type='text')
            .form-group
              label(for='grower-indoor') Indoor:
              select#grower-indoor.form-control
                option Select              
                option Yes
                option No
            #sign-up.form-group                
              label.form-control-label(for='grower-strains') Strains:
              input#grower-strains.form-control(type='text')
              label.form-control-label(for='grower-cycle') Cycle:
              input#grower-cycle.form-control(type='text')

        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
          button#growerBttn.btn.btn-primary(type='button') Submit

      #modal3.modal.fade(tabindex='-1' role='dialog' aria-labelledby='joinForDispenser' aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#dispenserForm.modal-title Sign-Up!
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            form
              #sign-up.form-group
                label.form-control-label(for='dispenser-name') Name:
                input#dispenser-name.form-control(type='text')
                label.form-control-label(for='dispenser-license') License ID:
                input#dispenser-license.form-control(type='text')
                label.form-control-label(for='dispenser-city') City:
                input#dispenser-city.form-control(type='text' )
                label.form-control-label(for='dispenser-state') State:
                input#dispenser-state.form-control(type='text' placeholder='CA')
                label.form-control-label(for='dispenser-email') Email:
                input#dispenser-email.form-control(type='email' placeholder='highflow@example.com')
                label.form-control-label(for='dispenser-bio') Bio:
                input#dispenser-bio.form-control(type='text')           
                label.form-control-label(for='dispenser-strains') Strains Wanted:
                input#dispenser-strains-wanted.form-control(type='text')

          .modal-footer
            button.btn.btn-secondary(type='button' data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Submit


    //slideshow/carousel
  #carouselExampleIndicators.carousel.slide(data-ride='carousel' style='width: 50%; margin: 0 auto;')
    ol.carousel-indicators
      li.active(data-target='#carouselExampleIndicators' data-slide-to='0')
      li(data-target='#carouselExampleIndicators' data-slide-to='1')
      li(data-target='#carouselExampleIndicators' data-slide-to='2')
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src='/assets/images/weed1crop.jpg' alt='First slide')
        .carousel-caption.d-none.d-md-block
          h5 Local Growers
          p Meet legal growers in your area who will help you maintain your supply
      .carousel-item
        img.d-block.w-100(src='/assets/images/weed2crop.jpg' alt='Second slide')
        .carousel-caption.d-none.d-md-block
          h5 New Product
          p Keep up to date with the newest strains in your area
      .carousel-item
        img.d-block.w-100(src='/assets/images/weed4crop.jpg' alt='Third slide')
        .carousel-caption.d-none.d-md-block
          h5 Dispensaries
          p Find licensed distributors who will keep your supply in demand
    a.carousel-control-prev(href='#carouselExampleIndicators' role='button' data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselExampleIndicators' role='button' data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next


