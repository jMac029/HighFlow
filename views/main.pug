extends layouts
block css
  link(rel='stylesheet' href='/assets/css/style.css')

block contents 
  .jumbotron
    div
      span#high High
      span#flow Flow
    h2.lead Begin your search to expand your network today
  .wrapper
    a(href='/growers') 
        button.btn.btn-secondary.btn-lg(type='button') Growers   
    a(href='/dispensaries') 
        button.btn.btn-secondary.btn-lg(type='button') Dispensaries
  h1.my-4 Meet our newest members..
  .container
    .row
      for grower in dbGrower
        .col-lg-4.col-sm-6.portfolio-item
          .card.h-100#grower.id
            a(href= grower.webpage) 
              img.card-img-top(src=grower.image)
            .card-body
              h4.card-title= grower.grower_name