extends layouts.pug
block css
  link(rel='stylesheet' href='/assets/css/lists.css')
block nav
  nav.navbar.fixed-top.navbar-expand-lg
    a.navbar-brand(href='/') HighFlow
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavDropdown' aria-controls='navbarNavDropdown' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNavDropdown.navbar-collapse.collapse
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link(href='/main')
            | Home 
            span.sr-only (current)
        li.nav-item
          a.nav-link(href='/featured') Featured
        li.nav-item
          a.nav-link(href='/about') About
block contents
  .jumbotron.jumbotron-fluid
    p.display-4 Local growers closest to you:
    p.lead
      each grower in dbGrower
        .card
          h5.card-header= grower.grower_name
            .card-body
              img.rounded.float-right(src='/assets/images/grower2.jpg' alt='grower1')
              h5.card-title= grower.bio
              h6= grower.license
              p.card-text= grower.strains
              p.card-text= grower.cycle
              button.btn.btn-info.btn-lg(type='button' data-toggle='modal' data-target='#myModal') Contact
              #myModal.modal.fade(role='dialog')
                .modal-dialog
                  .modal-content
                    .modal-header
                      h4.modal-title= grower.grower_name
                    .modal-body
                      a(href='#') example.com(need to add website)
                      p= grower.city, grower.state
                      p= grower.email
                    .modal-footer
                      button.btn.btn-default(type='button' data-dismiss='modal') Close
