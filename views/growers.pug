extends main.pug
block css
  link(rel='stylesheet' href='/assets/css/lists.css')

block contents
  .jumbotron.jumbotron-fluid
    p.display-4 Local growers closest to you:
    p.lead
      each grower in dbGrower
        .card(id = grower.id)
          h5.card-header= grower.grower_name
            .card-body
              img.rounded.float-right(src=grower.image alt='grower1')
              h5.card-title= grower.about
              p.card-text= "License: " + grower.license
              p.card-text= "Strains: " + grower.strains
              p.card-text= "System: " + grower.system
              p.card-text= "Grow Cycle: " + grower.cycle
              button.btn.btn-info.btn-lg(type='button' data-toggle='modal' data-target="#myModal-"+(grower.id)) Contact
              .modal.fade(role='dialog')(id = "myModal-"+(grower.id))
                .modal-dialog
                    .modal-content
                      .modal-header
                        h4.modal-title= grower.grower_name
                      .modal-body
                        a.weblink(href=grower.webpage)= grower.webpage
                        p= grower.city + ", " + grower.state
                        p= grower.email
                      .modal-footer
                        button.btn.btn-default(type='button' data-dismiss='modal') Close



